---
interface Props {
  post: any;
  featured?: boolean;
}

const { post, featured = false } = Astro.props;
const { frontmatter, url } = post;
---

<article class={`group relative overflow-hidden rounded-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-800/50 shadow-sm hover:shadow-xl transition-all duration-300 ${featured ? 'row-span-2' : ''}`}>
  <a href={url} class="block">
    <div class="p-6">
      {featured && (
        <div class="flex items-center space-x-2 mb-4">
          <div class="w-2 h-2 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full animate-pulse-glow"></div>
          <span class="text-sm font-medium text-primary-600 dark:text-primary-400">Featured</span>
        </div>
      )}
      
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center space-x-2">
          <span class="px-3 py-1 text-xs font-medium bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 rounded-full">
            {frontmatter.category}
          </span>
          <span class="text-sm text-gray-500 dark:text-gray-400">
            {frontmatter.readTime} min read
          </span>
        </div>
        {frontmatter.version && (
          <span class="text-xs text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded">
            v{frontmatter.version}
          </span>
        )}
      </div>

      <h3 class={`font-bold text-gray-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors mb-3 ${featured ? 'text-2xl' : 'text-xl'}`}>
        {frontmatter.title}
      </h3>
      
      <p class={`text-gray-600 dark:text-gray-300 mb-4 ${featured ? 'text-base line-clamp-4' : 'text-sm line-clamp-3'}`}>
        {frontmatter.description}
      </p>

      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <div class="w-8 h-8 bg-gradient-to-br from-primary-500 to-accent-500 rounded-full flex items-center justify-center">
            <span class="text-white text-sm font-medium">
              {frontmatter.author.name.charAt(0)}
            </span>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-900 dark:text-white">{frontmatter.author.name}</p>
            <p class="text-xs text-gray-500 dark:text-gray-400">{frontmatter.pubDate}</p>
          </div>
        </div>
        
        <div class="flex items-center space-x-4 text-gray-500 dark:text-gray-400">
          <div class="flex items-center space-x-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"></path>
            </svg>
            <span class="text-xs">{frontmatter.likes || 0}</span>
          </div>
          <div class="flex items-center space-x-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z"></path>
            </svg>
            <span class="text-xs">{frontmatter.shares || 0}</span>
          </div>
        </div>
      </div>
    </div>
  </a>
</article>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>