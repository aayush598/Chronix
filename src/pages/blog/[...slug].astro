---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import BlogActions from '../../components/BlogActions.astro';

export async function getStaticPaths() {
  const posts = await Astro.glob('../../content/blog/*.md');
  return posts.map((post) => {
    const slug = post.file.split('/').pop()?.replace('.md', '') || '';
    return {
      params: { slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { frontmatter } = post;

// Calculate estimated reading time from word count
function calculateReadingTime(content: string): number {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  return Math.ceil(words / wordsPerMinute);
}

// Extract headings for table of contents
const headings = post.getHeadings();
---

<Layout 
  title={`${frontmatter.title} - Chronix`}
  description={frontmatter.description}
>
  <link rel="stylesheet" href="/src/styles/global.css" />
  
  <Header />
  
  <article class="min-h-screen bg-white dark:bg-gray-900">
    <!-- Article Header -->
    <header class="bg-gradient-to-br from-primary-50 to-accent-50 dark:from-gray-900 dark:to-gray-800 pt-24 pb-12">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="flex items-center justify-center space-x-4 mb-6">
            <span class="px-4 py-2 bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 rounded-full text-sm font-medium">
              {frontmatter.category}
            </span>
            {frontmatter.version && (
              <span class="px-3 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded-full text-sm">
                v{frontmatter.version}
              </span>
            )}
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
            {frontmatter.title}
          </h1>
          
          <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto">
            {frontmatter.description}
          </p>
          
          <!-- Author and Meta Information -->
          <div class="flex flex-col sm:flex-row items-center justify-center space-y-4 sm:space-y-0 sm:space-x-8 text-gray-600 dark:text-gray-300">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-accent-500 rounded-full flex items-center justify-center">
                <span class="text-white font-semibold text-lg">
                  {frontmatter.author.name.charAt(0)}
                </span>
              </div>
              <div class="text-left">
                <p class="font-semibold text-gray-900 dark:text-white">{frontmatter.author.name}</p>
                <p class="text-sm">{frontmatter.author.bio}</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-6 text-sm">
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span>Published {frontmatter.pubDate}</span>
              </div>
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>{frontmatter.readTime} min read</span>
              </div>
              <div class="flex items-center space-x-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                <span>{frontmatter.likes || 0}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Article Content -->
    <div class="relative">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="flex">
          <!-- Main Content -->
          <div class="flex-1">
            <!-- Article Actions -->
            <BlogActions 
              title={frontmatter.title}
              url={Astro.url.href}
              slug={Astro.params.slug || ''}
            />
            
            <!-- Article Body -->
            <div class="prose prose-lg dark:prose-invert max-w-none">
              <post.Content />
            </div>
            
            <!-- Tags -->
            {frontmatter.tags && frontmatter.tags.length > 0 && (
              <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Tags</h3>
                <div class="flex flex-wrap gap-2">
                  {frontmatter.tags.map((tag) => (
                    <span class="px-3 py-1 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-sm rounded-full">
                      #{tag}
                    </span>
                  ))}
                </div>
              </div>
            )}
            
            <!-- Share Section -->
            <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700 text-center">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">
                Enjoyed this article? Share it!
              </h3>
              <div class="flex justify-center space-x-4">
                <a 
                  href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(frontmatter.title)}&url=${encodeURIComponent(Astro.url.href)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="px-6 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors font-medium"
                >
                  Share on Twitter
                </a>
                <a 
                  href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="px-6 py-3 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors font-medium"
                >
                  Share on LinkedIn
                </a>
              </div>
            </div>
          </div>
          
          <!-- Table of Contents Sidebar -->
          <aside class="hidden xl:block ">
            <TableOfContents headings={headings} />
          </aside>
        </div>
      </div>
    </div>

    <!-- Related Articles -->
    <section class="bg-gray-50 dark:bg-gray-800 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8 text-center">
          More Articles
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Placeholder for related articles -->
          <div class="bg-white dark:bg-gray-900 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Continue Reading</h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Explore more technical articles and tutorials
            </p>
            <a href="/blog" class="inline-flex items-center mt-4 text-primary-600 dark:text-primary-400 font-medium hover:underline">
              View All Articles
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
          </div>
          <div class="bg-white dark:bg-gray-900 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Subscribe for Updates</h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Get notified about new articles and exclusive content
            </p>
            <form class="mt-4 flex">
              <input 
                type="email" 
                placeholder="Your email"
                class="flex-1 px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-l-lg bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary-500"
              />
              <button 
                type="submit"
                class="px-4 py-2 bg-primary-600 text-white text-sm font-medium rounded-r-lg hover:bg-primary-700 transition-colors"
              >
                Subscribe
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </article>
</Layout>

<style>
  /* Custom styles for article content */
  .prose {
    color: rgb(55 65 81);
  }
  
  .dark .prose {
    color: rgb(209 213 219);
  }
  
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    color: rgb(17 24 39);
  }
  
  .dark .prose h1, .dark .prose h2, .dark .prose h3, .dark .prose h4, .dark .prose h5, .dark .prose h6 {
    color: rgb(249 250 251);
  }
  
  .prose pre {
    background-color: rgb(31 41 55);
    border-radius: 0.75rem;
    padding: 1.5rem;
    overflow-x: auto;
  }
  
  .prose code:not(pre code) {
    background-color: rgb(243 244 246);
    color: rgb(185 28 28);
    padding: 0.25rem 0.375rem;
    border-radius: 0.375rem;
    font-size: 0.875em;
  }
  
  .dark .prose code:not(pre code) {
    background-color: rgb(55 65 81);
    color: rgb(239 68 68);
  }
  
  .prose blockquote {
    border-left: 4px solid rgb(59 130 246);
    background-color: rgb(239 246 255);
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-radius: 0 0.5rem 0.5rem 0;
  }
  
  .dark .prose blockquote {
    background-color: rgb(30 58 138 / 0.1);
    border-color: rgb(59 130 246);
  }
</style>